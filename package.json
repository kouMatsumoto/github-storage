{
  "name": "@koumatsumoto/github-storage",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.6.0"
  },
  "type": "module",
  "main": "./dist/github-storage.umd.js",
  "module": "./dist/github-storage.es.js",
  "exports": {
    "import": "./dist/github-storage.es.js",
    "require": "./dist/github-storage.umd.js"
  },
  "types": "./types/main.d.ts",
  "files": [
    "/dist",
    "/types"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "format": "rome format --write --indent-style space --line-width 120 ./src && rome check --apply ./src",
    "lint": "npm run format && git diff --exit-code --quiet",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kouMatsumoto/github-storage.git"
  },
  "keywords": [],
  "author": "Kou Matsumoto",
  "license": "ISC",
  "homepage": "https://github.com/kouMatsumoto/github-storage#readme",
  "bugs": {
    "url": "https://github.com/kouMatsumoto/github-storage/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@koumatsumoto"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.0.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rome": "^0.7.0-next.f6510d6",
    "typescript": "^4.7.4",
    "vite": "^3.0.2",
    "vitest": "^0.18.1"
  },
  "prettier": {
    "printWidth": 140,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,css,scss,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "rome format --write --indent-style space --line-width 120",
      "rome check --apply"
    ]
  }
}
